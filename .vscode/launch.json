      "program": "bundle exec ${workspaceRoot}/bin/rails",
      "env": {
        "PATH": "/home/echan/.yarn/bin:/home/echan/.config/yarn/global/node_modules/.bin:/home/echan/.yarn/bin:/home/echan/.config/yarn/global/node_modules/.bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin"
