<div class="mb-3 card card-body">
  <%= tweet.body %>
  <div class="me-4">
    <% if tweet.twitter_account.image? %>
      <%= image_tag tweet.twitter_account.image, class: "rounded-circle" %>
    <% end %>
    <%= link_to "@#{tweet.twitter_account.username}", "http://twitter.com/#{tweet.twitter_account.username}", targer: :_blank %>
  
  <% if tweet.published? %>
    <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_acccount.username}/status/#{tweet.tweet_id}", target: :_blank %>
  <% else %>
    Scheduled for <%= l tweet.publish_at, format: :long %>
  <% end %>
  </div>
</div>